#include <iostream>
using namespace std;

int main()
{
    int i, n;

    // User input
    cout << "Enter a number: ";
    cin >> n;

    // 1. For loop
    cout << "\n1. For Loop:\n";
    for (i = 1; i <= n; i++)
    {
        cout << i << " ";
    }

    // 2. While loop
    cout << "\n\n2. While Loop:\n";
    i = 1;
    while (i <= n)
    {
        cout << i << " ";
        i++;
    }

    // 3. Do-While loop
    cout << "\n\n3. Do-While Loop:\n";
    i = 1;
    do
    {
        cout << i << " ";
        i++;
    } while (i <= n);

    

    
    return 0;
}
